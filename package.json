{
  "name": "sotdl-notebook",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "pnpm run dev",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test.e2e": "cypress run",
    "test.unit": "vitest",
    "lint": "eslint",
    "sync": "npx cap sync",
    "open": "npx cap open",
    "build:android": "npx cap sync && npx cap build android",
    "build:ios": "npx cap sync && npx cap build ios",
    "run:android": "npx cap sync && npx cap run android",
    "run:ios": "npx cap sync && npx cap run ios",
    "build:dev": "tsc && vite build --mode development",
    "build:prod": "tsc && vite build --mode production",
    "run:android:dev": "pnpm build:dev && npx cap sync && npx cap run android",
    "run:android:prod": "pnpm build:prod && npx cap sync && npx cap run android",
    "version:beta": "npm version prerelease --preid=beta --message=\"chore(release): %s [skip ci]\"",
    "version:patch": "npm version patch --message=\"chore(release): %s [skip ci]\"",
    "version:minor": "npm version minor --message=\"chore(release): %s [skip ci]\"",
    "version:major": "npm version major --message=\"chore(release): %s [skip ci]\"",
    "release:beta": "git add . && git commit -m \"chore: prepare beta release\" && git checkout develop && npm run version:beta && git push --follow-tags",
    "release:prod": "git add . && git commit -m \"chore: prepare release\" && git checkout main && npm run version:patch && git push --follow-tags",
    "release:minor": "git add . && git commit -m \"chore: prepare minor release\" && git checkout main && npm run version:minor && git push --follow-tags",
    "release:major": "git add . && git commit -m \"chore: prepare major release\" && git checkout main && npm run version:major && git push --follow-tags"
  },
  "dependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/app": "6.0.1",
    "@capacitor/camera": "^6.1.1",
    "@capacitor/core": "6.1.2",
    "@capacitor/filesystem": "^6.0.1",
    "@capacitor/geolocation": "^6.0.1",
    "@capacitor/haptics": "6.0.1",
    "@capacitor/ios": "^6.1.2",
    "@capacitor/keyboard": "6.0.2",
    "@capacitor/local-notifications": "^6.1.0",
    "@capacitor/network": "^6.0.2",
    "@capacitor/preferences": "^6.0.2",
    "@capacitor/push-notifications": "^6.0.2",
    "@capacitor/status-bar": "6.0.1",
    "@capawesome/capacitor-live-update": "^6.6.0",
    "@ionic/pwa-elements": "^3.3.0",
    "@ionic/react": "^8.4.0",
    "@ionic/react-router": "^8.4.0",
    "@react-native-async-storage/async-storage": "^2.0.0",
    "@sentry/capacitor": "0.15.1",
    "@sentry/react": "7.81.1",
    "@sentry/replay": "7.81.1",
    "@sentry/tracing": "7.81.1",
    "@sentry/types": "7.81.1",
    "@tanstack/react-query": "^5.0.0",
    "@trpc/client": "^11.0.0-rc.593",
    "@trpc/react-query": "^11.0.0-rc.586",
    "@trpc/server": "^11.0.0-rc.586",
    "@types/lodash": "^4.17.13",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "@types/tesseract.js": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "capacitor-secure-storage-plugin": "^0.10.0",
    "ionicons": "^7.4.0",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router": "^5.3.4",
    "react-router-dom": "^5.3.4",
    "tesseract.js": "^5.1.1",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@capacitor/cli": "6.1.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-legacy": "^5.4.3",
    "@vitejs/plugin-react": "^4.3.3",
    "cypress": "^13.15.2",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "jsdom": "^22.1.0",
    "terser": "^5.36.0",
    "typescript": "^5.6.3",
    "vite": "~5.2.14",
    "vitest": "^0.34.6"
  },
  "description": "Shadow of the Demon Lord Notebook"
}
